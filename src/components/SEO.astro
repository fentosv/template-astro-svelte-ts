---
export interface Props {
  title?: string
  description?: string
}
const { description, title } = Astro.props

const seoDescription = description ?? 'Octagon API web'
const seoTitle = title ?? 'Octagon API web'
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<!-- Common -->
<link rel='canonical' href={canonicalURL} />
<meta charset='UTF-8' />
<meta name='description' content={seoDescription} />
<meta name='viewport' content='width=device-width' />
<meta name='robots' content='index, follow' />

<!-- OpenGraph Tags -->
<meta name='description' property='og:description' content={description} />
<meta property='og:image:alt' content='' />
<meta property='og:image' content='https://www.octagon-api.com/seo/logo.jpg' />
<meta property='og:locale' content='en_US' />
<meta property='og:locale:alternate' content='en_GB' />
<meta property='og:locale:alternate' content='es_ES' />
<meta property='og:site_name' content={seoTitle} />
<meta property='og:title' content={seoTitle} />
<meta property='og:type' content='article' />
<meta property='og:url' content={canonicalURL} />

<!-- Twitter Tags -->
<meta name='twitter:card' content='summary_large_image' />
<meta name='twitter:description' content={seoDescription} />
<meta name='twitter:image:alt' content='Octagon API logo' />
<meta name='twitter:image' content='https://www.octagon-api.com/seo/logo.jpg' />
<meta name='twitter:site' content='Octagon API' />
<meta name='twitter:title' content={seoDescription} />
